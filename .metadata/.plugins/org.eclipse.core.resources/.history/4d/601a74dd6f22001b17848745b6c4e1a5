package com.oracle.oci.votingservice.rest;

import java.util.List;

import javax.validation.Valid;

import org.springframework.http.HttpHeaders;
import org.springframework.http.ResponseEntity;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PatchMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;

import com.oracle.oci.votingservice.domain.CandidateData;
import com.oracle.oci.votingservice.domain.LoginData;
import com.oracle.oci.votingservice.domain.RegistrationData;
import com.oracle.oci.votingservice.domain.VoteData;


public interface OciVotingServiceApi {
	
	@PostMapping(value = "/voting-service/v1/voterregistrations",
	        produces = { "application/json" }, 
	        consumes = { "application/json" })
	public ResponseEntity<Object> registerVoter(@Valid @RequestBody RegistrationData body, BindingResult bindingResult );
	
	@PostMapping(value = "/voting-service/v1/candidateregistrations",
	        produces = { "application/json" }, 
	        consumes = { "application/json" })
	public ResponseEntity<Object> registerCandidate(@Valid @RequestBody CandidateData body, BindingResult bindingResult );
	
		
	@GetMapping(value = "/voting-service/v1/candidates",
			produces = { "application/json" })
	public ResponseEntity<Object> getCandidates();	
	
	@GetMapping(value = "/voting-service/v1/voters",
			produces = { "application/json" })
	public ResponseEntity<Object> getVoters();
	
	@GetMapping(value = "/voting-service/v1/vote/{voterId}",
	        produces = { "application/json" })
	ResponseEntity<Object> getVoterRegistrationData(@PathVariable("voterId") String voterId);
	
	
}
